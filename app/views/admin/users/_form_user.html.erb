<%= form_for [:admin, @user] do |f| %>
  <div class="form-group">
    <%= f.label :name %><span class="required" aria-required="true"></span>
    <%= f.text_field :name, class: "form-control", :disabled => true %>
  </div>

  <div class="form-group">
    <%= f.label :email %><span class="required" aria-required="true"></span>
    <%= f.email_field :email, autofocus: true, class: "form-control",
      :disabled => true %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><span class="required" aria-required="true"></span>
    <%= f.text_field :phone, class: "form-control", :disabled => true %>
  </div>

  <div class="form-group">
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
  </div>

  <div class="form-group">
    <%= f.submit t("create"), class: "btn btn-primary" %>
  </div>
<% end %>
