<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-subject font-dark bold uppercase">
        <%= t "order" %><%= @order.id - 1 %>
      </span>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><%= t "image" %></th>
            <th><%= t "title" %></th>
            <th><%= t "quantity" %></th>
            <th><%= t "price" %></th>
          </tr>
        </thead>
        <tbody >
          <%= render partial: "form_order", collection: @line_items, as: :line_item %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="2"><%= t "total" %></th>
            <th colspan="2"><%= format_price total_price_order %></th>
          </tr>
        </tfoot>
      </table>
      <%= form_for [:admin, @order] do |f| %>
        <div class="form-group">
          <%= f.select(:status, Order.statuses.keys.map {|status| [status.titleize,status]}) %>
        </div>
        <div class="form-group">
          <%= f.submit t("save"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
