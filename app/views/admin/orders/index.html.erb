<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-subject font-dark bold uppercase"><%= t ".orders" %></span>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t"stt" %></th>
            <th><%= t "customers" %></th>
            <th><%= t "email" %></th>
            <th><%= t "phone" %></th>
            <th><%= t "address" %></th>
            <th><%= t "status" %></th>
            <th><%= t "created_at" %></th>
            <th colspan="2"> <%= t "actions" %> </th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "order", collection: @orders %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
